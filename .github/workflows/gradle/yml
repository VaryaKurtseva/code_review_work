name: Java CI with Gradle
on:
  push:
    branches: [ "kurtsevaVa" ]
  pull_request:
    branches: [ "kurtsevaVa" ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          distribution: 'temurin'
          java-version: '17'
          
      - run: chmod +x gradlew
        
      - name: Build
        run: ./gradlew build
